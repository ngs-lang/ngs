		new_fd_pos = c_lseek(stdlib_error_fd, 0, "cur")
		if fd_pos == new_fd_pos {
			write(stdlib_error_fd, "\e[A\e[0K")
		}
		super(s)
		fd_pos = c_lseek(stdlib_error_fd, 0, "cur")
		null
	}

